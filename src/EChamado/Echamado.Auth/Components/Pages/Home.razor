@page "/"

<PageTitle>EChamado - Servidor de Autenticação</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
    <MudStack Spacing="6">
        <MudText Typo="Typo.h3" AlignItems="Align.Center" GutterBottom="true">
            🔐 EChamado Auth Server
        </MudText>

        <MudText Typo="Typo.h5" AlignItems="Align.Center" Color="Color.Secondary">
            Sistema de Autenticação SSO/OIDC com OpenIddict
        </MudText>

        <MudDivider />

        <MudGrid>
            <MudItem xs="12" md="6">
                <MudCard Elevation="2">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">🎯 Sobre o Sistema</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudText Typo="Typo.body2">
                            O <strong>EChamado</strong> é um sistema completo de gerenciamento de chamados/tickets
                            desenvolvido com .NET 9, Blazor WebAssembly e autenticação SSO/OIDC.
                        </MudText>
                        <MudList Dense="true" T="string">
                            <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                Autorização com OpenIddict 6.1.1
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                Authorization Code Flow + PKCE
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                JWT Tokens com refresh automático
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle" IconColor="Color.Success">
                                Integração com ASP.NET Core Identity
                            </MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" md="6">
                <MudCard Elevation="2">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">🚀 Recursos</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudList Dense="true" T="string">
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Security">
                                <MudText Typo="Typo.body2">
                                    <strong>Segurança Avançada:</strong> OIDC com PKCE, refresh tokens e criptografia robusta
                                </MudText>
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Link">
                                <MudText Typo="Typo.body2">
                                    <strong>Integração:</strong> Ready para SSO com múltiplos clientes
                                </MudText>
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Api">
                                <MudText Typo="Typo.body2">
                                    <strong>API Completa:</strong> RESTful endpoints para gestão de usuários
                                </MudText>
                            </MudListItem>
                            <MudListItem T="string" Icon="@Icons.Material.Filled.Architecture">
                                <MudText Typo="Typo.body2">
                                    <strong>Arquitetura:</strong> Clean Architecture com Domain-Driven Design
                                </MudText>
                            </MudListItem>
                        </MudList>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>

        <MudPaper Class="pa-6" Elevation="3" Style="background-color: var(--mud-palette-primary-lighten-5);">
            <MudStack Spacing="4">
                <MudText Typo="Typo.h6" AlignItems="Align.Center">
                    📚 Como Usar
                </MudText>

                <MudGrid>
                    <MudItem xs="12" md="4">
                        <MudStack AlignItems="AlignItems.Center" Spacing="2">
                            <MudIcon Icon="@Icons.Material.Filled.Login" Size="Size.Large" Color="Color.Primary" />
                            <MudText Typo="Typo.subtitle1" AlignItems="Align.Center"><strong>1. Faça Login</strong></MudText>
                            <MudText Typo="Typo.body2" AlignItems="Align.Center">
                                Use suas credenciais para acessar o sistema
                            </MudText>
                            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/Account/Login" StartIcon="@Icons.Material.Filled.Login">
                                Ir para Login
                            </MudButton>
                        </MudStack>
                    </MudItem>

                    <MudItem xs="12" md="4">
                        <MudStack AlignItems="AlignItems.Center" Spacing="2">
                            <MudIcon Icon="@Icons.Material.Filled.AppRegistration" Size="Size.Large" Color="Color.Secondary" />
                            <MudText Typo="Typo.subtitle1" AlignItems="Align.Center"><strong>2. Registre-se</strong></MudText>
                            <MudText Typo="Typo.body2" AlignItems="Align.Center">
                                Novo usuário? Crie sua conta aqui
                            </MudText>
                            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="/Account/Register" StartIcon="@Icons.Material.Filled.PersonAdd">
                                Registrar
                            </MudButton>
                        </MudStack>
                    </MudItem>

                    <MudItem xs="12" md="4">
                        <MudStack AlignItems="AlignItems.Center" Spacing="2">
                            <MudIcon Icon="@Icons.Material.Filled.Link" Size="Size.Large" Color="Color.Tertiary" />
                            <MudText Typo="Typo.subtitle1" AlignItems="Align.Center"><strong>3. Integre</strong></MudText>
                            <MudText Typo="Typo.body2" AlignItems="Align.Center">
                                Configure seus clientes para usar SSO
                            </MudText>
                            <MudButton Variant="Variant.Text" Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.Info">
                                Ver Docs
                            </MudButton>
                        </MudStack>
                    </MudItem>
                </MudGrid>
            </MudStack>
        </MudPaper>

        <MudAlert Severity="Severity.Info" Icon="@Icons.Material.Filled.Info">
            <MudText Typo="Typo.body2">
                <strong>Nota:</strong> Este é o servidor de autenticação do EChamado. Para acessar o sistema completo,
                faça login e seja redirecionado para o cliente Blazor WebAssembly.
            </MudText>
        </MudAlert>

        <MudPaper Class="pa-4" Elevation="0" Style="background-color: var(--mud-palette-surface); border: 1px solid var(--mud-palette-lines-default);">
            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.caption" Color="Color.Secondary">
                    Desenvolvido com .NET 9, ASP.NET Core, OpenIddict e MudBlazor
                </MudText>
                <MudStack Row="true" Spacing="3">
                    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Default" Href="https://github.com/mzet97/e-chamado" Target="_blank" Size="Size.Small" />
                    <MudIconButton Icon="@Icons.Material.Filled.Link" Color="Color.Default" Href="#" Target="_blank" Size="Size.Small" />
                </MudStack>
            </MudStack>
        </MudPaper>
    </MudStack>
</MudContainer>

# EChamado - Environment Variables Template
# Copy this file to .env and fill with your actual values
# NEVER commit .env to version control!

# ========================================
# DATABASE CONFIGURATION
# ========================================
ConnectionStrings__DefaultConnection="Host=localhost;Port=5432;Database=e-chamado;Username=postgres;Password=YOUR_DB_PASSWORD"

# ========================================
# SECURITY SECRETS
# ========================================
# Generate a secure secret with: openssl rand -base64 32
AppSettings__Secret="REPLACE_WITH_SECURE_GENERATED_SECRET"

# ========================================
# APPLICATION URLS
# ========================================
# Auth Server
AppSettings__AuthServerUrl="https://localhost:7132"
AppSettings__ValidOn="https://localhost:7132"

# API Server
AppSettings__ApiServerUrl="https://localhost:7296"

# Blazor Client
ClientSettings__BlazorClientUrl="https://localhost:7274"
ClientSettings__AuthServerUrl="https://localhost:7132"
ClientSettings__BackendUrl="https://localhost:7296"

# ========================================
# REDIS CONFIGURATION
# ========================================
ConnectionStrings__Redis="localhost:6379,abortConnect=false"

# ========================================
# RABBITMQ CONFIGURATION
# ========================================
RabbitMq__Host="localhost"
RabbitMq__Port=5672
RabbitMq__Username="guest"
RabbitMq__Password="guest"

# ========================================
# ASPNETCORE ENVIRONMENT
# ========================================
ASPNETCORE_ENVIRONMENT="Development"

# ========================================
# DATA PROTECTION KEYS PATH
# ========================================
DP_KEYS_PATH="/tmp/EChamado-DataProtection-Keys"

# ========================================
# LOGGING LEVEL
# ========================================
Logging__LogLevel__Default="Information"
Logging__LogLevel__Microsoft="Warning"

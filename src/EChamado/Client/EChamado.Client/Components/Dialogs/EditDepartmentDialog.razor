@using EChamado.Client.Services
@using EChamado.Client.Models
@inject DepartmentService DepartmentService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success">
            <MudTextField @bind-Value="name"
                          Label="Nome"
                          Required="true"
                          RequiredError="Nome é obrigatório"
                          Variant="Variant.Outlined"
                          Class="mb-3" />

            <MudTextField @bind-Value="description"
                          Label="Descrição"
                          Lines="3"
                          Variant="Variant.Outlined" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   OnClick="Submit"
                   Disabled="@(!success || processing)">
            @if (processing)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Salvando...</MudText>
            }
            else
            {
                <MudText>Salvar</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public DepartmentResponse Department { get; set; } = null!;

    private MudForm form = null!;
    private bool success;
    private bool processing;
    private string name = string.Empty;
    private string description = string.Empty;

    protected override void OnInitialized()
    {
        name = Department.Name;
        description = Department.Description;
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private async Task Submit()
    {
        await form.Validate();

        if (!form.IsValid)
            return;

        processing = true;

        try
        {
            var request = new UpdateDepartmentRequest(name, description);
            await DepartmentService.UpdateAsync(Department.Id, request);
            Snackbar.Add("Departamento atualizado com sucesso!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao atualizar departamento: {ex.Message}", Severity.Error);
        }
        finally
        {
            processing = false;
        }
    }
}

@using EChamado.Client
@inherits LayoutComponentBase

<MudThemeProvider 
    @ref="_mudThemeProvider"
    @bind-IsDarkMode="_isDarkMode" 
    Theme="Configuration.Theme" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@( (e) => _drawerOpen = !_drawerOpen )" />
        EChamado
        <MudSpacer />
        <LoginDisplay />
        <MudSwitch Color="Color.Inherit"
        @bind-Value="@_isDarkMode"
        T="bool"
        Class="ma-4"
        ThumbIcon="@Icons.Material.TwoTone.DarkMode" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _isDarkMode = true;
    private MudThemeProvider _mudThemeProvider = null!;
    private bool _drawerOpen = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            await _mudThemeProvider.WatchSystemPreference(OnSystemPreferenceChanged);
            StateHasChanged();
        }
    }

    private Task OnSystemPreferenceChanged(bool newValue)
    {
        _isDarkMode = newValue;
        StateHasChanged();
        return Task.CompletedTask;
    }
}
@page "/admin/ordertypes"
@using EChamado.Client.Services
@using EChamado.Client.Models
@inject LookupService LookupService
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@attribute [Authorize]

<PageTitle>Gerenciar Tipos de Chamado - EChamado</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <div class="d-flex justify-space-between align-center mb-4">
        <MudText Typo="Typo.h4">Gerenciar Tipos de Chamado</MudText>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Add"
                   OnClick="OpenCreateDialog">
            Novo Tipo
        </MudButton>
    </div>

    @if (loading)
    {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
    }
    else
    {
        <MudTable Items="@orderTypes" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@loading" Dense="true">
            <HeaderContent>
                <MudTh>Nome</MudTh>
                <MudTh>Descrição</MudTh>
                <MudTh Style="width: 120px;">Ações</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Nome">@context.Name</MudTd>
                <MudTd DataLabel="Descrição">@context.Description</MudTd>
                <MudTd DataLabel="Ações">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                   Size="Size.Small"
                                   Color="Color.Primary"
                                   OnClick="@(() => OpenEditDialog(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Size="Size.Small"
                                   Color="Color.Error"
                                   OnClick="@(() => DeleteOrderType(context.Id))" />
                </MudTd>
            </RowTemplate>
            <NoRecordsContent>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Nenhum tipo de chamado encontrado</MudText>
            </NoRecordsContent>
        </MudTable>
    }
</MudContainer>

@code {
    private List<OrderTypeResponse> orderTypes = new();
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrderTypes();
    }

    private async Task LoadOrderTypes()
    {
        loading = true;
        try
        {
            orderTypes = await LookupService.GetOrderTypesAsync(forceRefresh: true);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao carregar tipos de chamado: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private async Task OpenCreateDialog()
    {
        var dialog = await DialogService.ShowAsync<CreateOrderTypeDialog>("Novo Tipo de Chamado");
        var result = await dialog.Result;
        if (!result.Canceled) await LoadOrderTypes();
    }

    private async Task OpenEditDialog(OrderTypeResponse orderType)
    {
        var parameters = new DialogParameters<EditOrderTypeDialog>
        {
            { x => x.OrderType, orderType }
        };
        var dialog = await DialogService.ShowAsync<EditOrderTypeDialog>("Editar Tipo de Chamado", parameters);
        var result = await dialog.Result;
        if (!result.Canceled) await LoadOrderTypes();
    }

    private async Task DeleteOrderType(Guid id)
    {
        var parameters = new DialogParameters
        {
            { "ContentText", "Tem certeza que deseja excluir este tipo de chamado?" },
            { "ButtonText", "Excluir" },
            { "Color", Color.Error }
        };
        var dialog = await DialogService.ShowAsync<ConfirmationDialog>("Confirmar Exclusão", parameters);
        var result = await dialog.Result;
        if (!result.Canceled)
        {
            try
            {
                await LookupService.DeleteOrderTypeAsync(id);
                Snackbar.Add("Tipo de chamado excluído com sucesso!", Severity.Success);
                await LoadOrderTypes();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Erro ao excluir tipo de chamado: {ex.Message}", Severity.Error);
            }
        }
    }
}

@page "/orders/create"
@page "/orders/{Id:guid}/edit"
@using EChamado.Client.Services
@using EChamado.Client.Models
@inject OrderService OrderService
@inject LookupService LookupService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<PageTitle>@(IsEditMode ? "Editar Chamado" : "Novo Chamado") - EChamado</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4 mb-8">
    @if (isLoading)
    {
        <MudCard Elevation="3">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudSkeleton SkeletonType="SkeletonType.Circle" Width="40px" Height="40px" />
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudSkeleton Width="200px" Height="20px" />
                    <MudSkeleton Width="100px" Height="15px" />
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12"><MudSkeleton Height="50px" /></MudItem>
                    <MudItem xs="12"><MudSkeleton Height="150px" /></MudItem>
                    <MudItem xs="12" md="6"><MudSkeleton Height="50px" /></MudItem>
                    <MudItem xs="12" md="6"><MudSkeleton Height="50px" /></MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    }
    else
    {
        <MudCard Elevation="3">
            <MudForm @ref="form" @bind-IsValid="@isFormValid">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="@(IsEditMode ? Color.Info : Color.Primary)">
                            <MudIcon Icon="@(IsEditMode ? Icons.Material.Filled.Edit : Icons.Material.Filled.Add)" />
                        </MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">@(IsEditMode ? "Editar Chamado" : "Novo Chamado")</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Preencha as informações abaixo</MudText>
                    </CardHeaderContent>
                </MudCardHeader>

                <MudCardContent>
                    <MudGrid Spacing="3">
                        <!-- Título -->
                        <MudItem xs="12">
                            <MudTextField @bind-Value="model.Title"
                                          Label="Título"
                                          Variant="Variant.Outlined"
                                          Required="true"
                                          RequiredError="Título é obrigatório"
                                          MaxLength="200"
                                          Counter="200"
                                          Adornment="Adornment.Start"
                                          AdornmentIcon="@Icons.Material.Filled.Title" />
                        </MudItem>

                        <!-- Descrição -->
                        <MudItem xs="12">
                            <MudTextField @bind-Value="model.Description"
                                          Label="Descrição"
                                          Variant="Variant.Outlined"
                                          Required="true"
                                          RequiredError="Descrição é obrigatória"
                                          Lines="5"
                                          MaxLength="2000"
                                          Counter="2000"
                                          Adornment="Adornment.Start"
                                          AdornmentIcon="@Icons.Material.Filled.Description" />
                        </MudItem>

                        <MudItem xs="12">
                            <MudDivider Class="my-2" />
                            <MudText Typo="Typo.subtitle2" Color="Color.Primary">Classificação</MudText>
                        </MudItem>

                        <!-- Tipo -->
                        <MudItem xs="12" md="6">
                            <MudSelect T="Guid" @bind-Value="model.TypeId"
                                       Label="Tipo"
                                       Variant="Variant.Outlined"
                                       Required="true"
                                       RequiredError="Tipo é obrigatório"
                                       AnchorOrigin="Origin.BottomCenter"
                                       AdornmentIcon="@Icons.Material.Filled.Category">
                                @foreach (var type in types)
                                {
                                    <MudSelectItem Value="@type.Id">@type.Name</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <!-- Departamento -->
                        <MudItem xs="12" md="6">
                            <MudSelect T="Guid?" @bind-Value="model.DepartmentId"
                                       Label="Departamento"
                                       Variant="Variant.Outlined"
                                       Clearable="true"
                                       AnchorOrigin="Origin.BottomCenter"
                                       AdornmentIcon="@Icons.Material.Filled.Business">
                                @foreach (var dept in departments)
                                {
                                    <MudSelectItem T="Guid?" Value="@dept.Id">@dept.Name</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <!-- Categoria -->
                        <MudItem xs="12" md="6">
                            <MudSelect T="Guid?" Value="selectedCategoryId"
                                       ValueChanged="OnCategoryChanged"
                                       Label="Categoria"
                                       Variant="Variant.Outlined"
                                       Clearable="true"
                                       AnchorOrigin="Origin.BottomCenter"
                                       AdornmentIcon="@Icons.Material.Filled.Class">
                                @foreach (var cat in categories)
                                {
                                    <MudSelectItem T="Guid?" Value="@cat.Id">@cat.Name</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <!-- Subcategoria -->
                        <MudItem xs="12" md="6">
                            <MudSelect T="Guid?" @bind-Value="model.SubCategoryId"
                                       Label="Subcategoria"
                                       Variant="Variant.Outlined"
                                       Clearable="true"
                                       Disabled="@(availableSubCategories.Count == 0)"
                                       AnchorOrigin="Origin.BottomCenter"
                                       AdornmentIcon="@Icons.Material.Filled.SubdirectoryArrowRight">
                                @foreach (var subCat in availableSubCategories)
                                {
                                    <MudSelectItem T="Guid?" Value="@subCat.Id">@subCat.Name</MudSelectItem>
                                }
                            </MudSelect>
                        </MudItem>

                        <!-- Prazo -->
                        <MudItem xs="12" md="6">
                            <MudDatePicker @bind-Date="dueDate"
                                           Label="Prazo (Opcional)"
                                           Variant="Variant.Outlined"
                                           Clearable="true"
                                           MinDate="DateTime.Today"
                                           DateFormat="dd/MM/yyyy"
                                           Adornment="Adornment.Start"
                                           AdornmentIcon="@Icons.Material.Filled.Event" />
                        </MudItem>
                    </MudGrid>
                </MudCardContent>

                <MudCardActions Class="pa-4 d-flex justify-end gap-2">
                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               OnClick="Cancel"
                               Disabled="isSaving">
                        Cancelar
                    </MudButton>
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Disabled="@(!isFormValid || isSaving)"
                               OnClick="Submit"
                               StartIcon="@(IsEditMode ? Icons.Material.Filled.Save : Icons.Material.Filled.Send)">
                        @if (isSaving)
                        {
                            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                            <MudText Class="ms-2">Salvando...</MudText>
                        }
                        else
                        {
                            <MudText>@(IsEditMode ? "Atualizar" : "Criar Chamado")</MudText>
                        }
                    </MudButton>
                </MudCardActions>
            </MudForm>
        </MudCard>
    }
</MudContainer>

@code {
    [Parameter]
    public Guid? Id { get; set; }

    private bool IsEditMode => Id.HasValue;

    private MudForm form = null!;
    private bool isFormValid;
    private bool isLoading = true;
    private bool isSaving;

    // Model
    private OrderFormModel model = new();
    private Guid? selectedCategoryId;
    private DateTime? dueDate;

    // Lookups
    private List<OrderTypeResponse> types = new();
    private List<DepartmentResponse> departments = new();
    private List<CategoryResponse> categories = new();
    private List<SubCategoryResponse> availableSubCategories = new();

    private class OrderFormModel
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public Guid TypeId { get; set; }
        public Guid? DepartmentId { get; set; }
        public Guid? SubCategoryId { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Carrega lookups em paralelo
            var typesTask = LookupService.GetOrderTypesAsync();
            var deptsTask = LookupService.GetDepartmentsAsync();
            var catsTask = LookupService.GetCategoriesAsync();

            await Task.WhenAll(typesTask, deptsTask, catsTask);

            types = await typesTask;
            departments = await deptsTask;
            categories = await catsTask;

            // Se está editando, carrega os dados do chamado
            if (IsEditMode)
            {
                await LoadOrder();
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao carregar dados: {ex.Message}", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadOrder()
    {
        try
        {
            var order = await OrderService.GetByIdAsync(Id!.Value);
            if (order == null)
            {
                Snackbar.Add("Chamado não encontrado", Severity.Error);
                NavigationManager.NavigateTo("/orders");
                return;
            }

            model.Title = order.Title;
            model.Description = order.Description;
            model.TypeId = order.TypeId;
            model.DepartmentId = order.DepartmentId;
            model.SubCategoryId = order.SubCategoryId;
            dueDate = order.DueDate;

            // Se tem categoria, carrega as subcategorias
            if (order.CategoryId.HasValue)
            {
                selectedCategoryId = order.CategoryId.Value;
                await LoadSubCategories(order.CategoryId.Value);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao carregar chamado: {ex.Message}", Severity.Error);
            NavigationManager.NavigateTo("/orders");
        }
    }

    private async Task OnCategoryChanged(Guid? categoryId)
    {
        selectedCategoryId = categoryId;
        model.SubCategoryId = null;
        availableSubCategories.Clear();

        if (categoryId.HasValue)
        {
            await LoadSubCategories(categoryId.Value);
        }

        StateHasChanged();
    }

    private async Task LoadSubCategories(Guid categoryId)
    {
        try
        {
            availableSubCategories = await LookupService.GetSubCategoriesAsync(categoryId);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao carregar subcategorias: {ex.Message}", Severity.Error);
        }
    }

    private async Task Submit()
    {
        await form.Validate();

        if (!isFormValid)
        {
            Snackbar.Add("Por favor, preencha todos os campos obrigatórios", Severity.Warning);
            return;
        }

        isSaving = true;

        try
        {
            if (IsEditMode)
            {
                var request = new UpdateOrderRequest(
                    Id!.Value,
                    model.Title,
                    model.Description,
                    model.TypeId,
                    selectedCategoryId,
                    model.SubCategoryId,
                    model.DepartmentId,
                    dueDate
                );

                await OrderService.UpdateAsync(request);
                Snackbar.Add("Chamado atualizado com sucesso!", Severity.Success);
                NavigationManager.NavigateTo($"/orders/{Id.Value}");
            }
            else
            {
                var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
                var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                var userEmail = authState.User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
                    ?? authState.User.Identity?.Name ?? string.Empty;

                if (string.IsNullOrWhiteSpace(userId) || string.IsNullOrWhiteSpace(userEmail))
                {
                    Snackbar.Add("Não foi possível identificar o usuário logado para criar o chamado.", Severity.Error);
                    return;
                }

                var request = new CreateOrderRequest(
                    model.Title,
                    model.Description,
                    model.TypeId,
                    selectedCategoryId,
                    model.SubCategoryId,
                    model.DepartmentId,
                    dueDate,
                    Guid.Parse(userId),
                    userEmail
                );

                var orderId = await OrderService.CreateAsync(request);
                Snackbar.Add("Chamado criado com sucesso!", Severity.Success);
                NavigationManager.NavigateTo($"/orders/{orderId}");
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Erro ao salvar chamado: {ex.Message}", Severity.Error);
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        if (IsEditMode)
        {
            NavigationManager.NavigateTo($"/orders/{Id.Value}");
        }
        else
        {
            NavigationManager.NavigateTo("/orders");
        }
    }
}

@page "/authentication/logout-callback"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject NavigationManager Navigation

<PageTitle>Logout Callback</PageTitle>

<RemoteAuthenticatorView Action="@RemoteAuthenticationActions.LogOutCallback">
    <LogOut>
        <MudContainer MaxWidth="MaxWidth.Small" Class="mt-16 text-center">
            <MudProgressCircular Indeterminate="true" Size="Size.Large" />
            <MudText Typo="Typo.h6" Class="mt-4">Fazendo logout...</MudText>
        </MudContainer>
    </LogOut>
    <LogOutSucceeded>
        <MudContainer MaxWidth="MaxWidth.Small" Class="mt-16 text-center">
            <MudAlert Severity="Severity.Success">
                Logout realizado com sucesso!
            </MudAlert>
            <MudButton Href="/" Color="Color.Primary" Class="mt-4">
                Voltar ao Início
            </MudButton>
        </MudContainer>
    </LogOutSucceeded>
    <LogOutFailed>
        <MudContainer MaxWidth="MaxWidth.Small" Class="mt-16 text-center">
            <MudAlert Severity="Severity.Error">
                Erro durante o logout.
            </MudAlert>
            <MudButton Href="/" Color="Color.Primary" Class="mt-4">
                Voltar ao Início
            </MudButton>
        </MudContainer>
    </LogOutFailed>
</RemoteAuthenticatorView>